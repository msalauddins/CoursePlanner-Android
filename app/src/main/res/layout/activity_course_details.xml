<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".area.CourseDetailsActivity">

    <include
        layout="@layout/toolbar_layout"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/spot_image_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"/>

                <TextView
                    android:id="@+id/titles"
                    android:text="hello"
                    android:padding="5dip"
                    android:textSize="19sp"
                    android:textColor="#000fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/loc_description"
                    android:text="Description"
                    android:padding="5dip"
                    android:textSize="19sp"
                    android:textColor="#000fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/loc_course_time"
                    android:text="Course Time"
                    android:padding="5dip"
                    android:textSize="19sp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/legs"
                    android:text="Leg"
                    android:padding="5dip"
                    android:textSize="19sp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/spots"
                    android:text="Spot"
                    android:padding="5dip"
                    android:textSize="19sp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/transits"
                    android:text="Transit"
                    android:padding="5dip"
                    android:textSize="19sp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tags"
                    android:text="Tag"
                    android:background="@drawable/tag_border"
                    android:padding="5dip"
                    android:textSize="19sp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp">

        <Button
            android:id="@+id/edit_btn"
            android:text="Edit"
            android:textSize="14dp"
            android:background="#1565C0"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/select_btn"
            android:text="Select"
            android:textSize="14dp"
            android:background="#00897B"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"/>

    </LinearLayout>

</LinearLayout>
