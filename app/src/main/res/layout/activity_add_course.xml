<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".myCourses.AddCourseActivity">

    <include
        layout="@layout/toolbar_layout"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/select_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select_start_date"
                android:layout_margin="7dp"
                android:background="@drawable/origin_border"/>

            <TextView
                android:id="@+id/select_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select_end_date"
                android:layout_margin="7dp"
                android:background="@drawable/origin_border"/>

        </LinearLayout>

    </FrameLayout>

    <Button
        android:id="@+id/create_course"
        android:text="Create"
        android:textSize="15sp"
        android:background="#000fff"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_gravity="right|bottom"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>